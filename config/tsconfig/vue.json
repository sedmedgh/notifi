{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": [
    "env.d.ts",
    "src/**/*"
  ],
  "exclude": ["src/**/__tests__/*", "src/**/*.story.vue"],
  "compilerOptions": {
    "composite": true,
    "noEmitOnError": true,
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist"
  }
}
